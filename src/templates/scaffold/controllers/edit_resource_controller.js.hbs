var {{objectName}} = Ember.ObjectController.extend({
	actions : {
	    submit: function() {
	      if (this.get('model').get('isValid')) {
	          _self = this;
	          this.get('model').save();
	          this.redirectToModel();
	      };
	    },

	    cancel: function() {
	      this.transitionToRoute('{{resourcesRoute}}');
	    }		  
	},

    redirectToModel: function() {
	    var router = this.get('target');
	    var model = this.get('model');
	    router.transitionTo('{{modelRoute}}', model);
	}	
});

module.exports = {{objectName}};

