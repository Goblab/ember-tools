var {{modelName}} = require('{{modelPath}}');

var {{objectName}} = Ember.Route.extend({

  renderTemplate: function(controller, model) {
    this.render('{{editRoute}}', {controller: controller, model: model});
  },

  model: function() {
    return this.store.createRecord('{{modelName}}');
  },

  deactivate: function() {
    var model = this.get('controller.model');
    if (!model.get('isSaving')) {
      model.deleteRecord();
    }
  }

});

module.exports = {{objectName}};

